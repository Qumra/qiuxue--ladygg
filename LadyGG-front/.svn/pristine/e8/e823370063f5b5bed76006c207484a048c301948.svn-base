  .box {
      position: fixed;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      background: url(../imgae/background.jpg) no-repeat bottom;
      background-size: cover;

      .login-box {
          position: absolute;
          top: 30%;
          left: 50%;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
          padding: 30px 72px 45px 72px;
          width: 450px;
          border-radius: 10px;
          background: rgba($color: #CC9999, $alpha: .1);
          transform: translateX(-225px)
      }

      .login-title {
          text-align: center;
          margin: 0;
          padding-bottom: 10px;
          font-family: 'Wawati SC';
          font-size: 30px;
          color: #fff;
      }

      .input-box {
          margin: 12px 0;
          padding: 0 0 0 15px;
          width: 100%;
          height: 37px;
          border: none;
          //   border-left: solid .01rem #e9e9e9;
          background: rgba($color: #fff, $alpha: .5);
          font-size: 20px;
          outline: none;
      }

      .info {
          margin: 0;
          text-align: center;
          font-size: 20px;
          line-height: 30px;
          font-weight: 700;
          color: #CCCCCC;
      }

      .perch {
          height: 30px;
      }

      .gin {
          margin-top: 20px;
          width: 100%;
          height: 40px;
          font-size: 20px;
          font-weight: 700;
      }
  }

  .hints {
      height: 55px;
      font-size: 30px;
      color: #ff0000;
  }

  .hpa {
      position: absolute;
      top: 100px;
      left: 50px;
  }

  .hpb {
      position: absolute;
      top: 160px;
      left: 50px;
  }