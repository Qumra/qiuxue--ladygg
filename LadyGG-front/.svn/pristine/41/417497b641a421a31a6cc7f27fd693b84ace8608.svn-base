  .box {
      position: fixed;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      background: url(../imgae/background.jpg) no-repeat bottom;
      background-size: cover;

      .login-box {
          position: absolute;
          top: 30%;
          left: 36%;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
          padding: 30px 72px 45px 72px;
          border-radius: 10px;
          background: rgba($color: #CC9999, $alpha: .1)
      }

      .login-title {
          text-align: center;
          margin: 0;
          font-family: 'Wawati SC';
          font-size: 30px;
          color: #fff;
      }

      .input-box {
          margin: 12px 0;
          padding: 0 0 0 15px;
          width: 350px;
          height: 40px;
          border: none;
          //   border-left: solid .01rem #e9e9e9;
          background: rgba($color: #fff, $alpha: .5);
          font-size: 20px;
          outline: none;
      }

      .info {
          margin: 0;
          text-align: center;
          font-size: 14px;
          line-height: 20px;
          font-weight: 700;
          color: #CCCCCC;
      }

      .gin {
          margin-top: 10px;
          padding: 11px 0 11px 10px;
          width: 100%;
          line-height: 18px;
          border-radius: 5px;
          font-size: 18px;
      }
  }