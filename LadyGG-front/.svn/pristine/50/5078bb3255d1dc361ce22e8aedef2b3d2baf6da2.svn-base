.video-box {
  margin-bottom: 100px;
  border: solid 1px #e9e9e9;
  border-radius: 8px;
}

.video-box .video-title {
  padding: 0 30px;
  height: 40px;
  background-color: #616663;
  color: #fff;
}

.video-box .video-word {
  display: flex;
  flex-direction: column;
  padding: 20px 100px;
}

.video-box .video-word .user-img .add-img {
  position: relative;
  left: 20px;
  display: inline-block;
  margin-bottom: 10px;
  padding: 10px;
  line-height: 30px;
  vertical-align: middle;
  border: 5px solid #cccccc;
}

.video-box .video-word .user-img #images {
  max-width: 70px;
}

.video-box .video-word .video-input {
  margin: 10px 0;
}

.video-box .video-word .video-input .input-title {
  margin-right: 20px;
}

.video-box .video-word .input-btn {
  width: 140px;
}

.video-box .video-word .video-row {
  margin: 10px 0;
}

.video-box .video-word .video-row .input-title {
  margin-right: 20px;
}

.video-box .video-word .video-row .input-box {
  width: calc(100% - 100px);
}

.video-box .video-word .video-row .txt-box {
  width: calc(100% - 100px);
  height: 50px;
}

.video-box .video-word .video-row .video-url {
  padding: 40px 60px;
  width: calc(100% - 100px);
  height: 340px;
  border: solid 1px #A9A9A9;
}

.video-box .video-word .video-row .video-url .url-block {
  line-height: 30px;
}

.video-box .video-word .video-row .video-url .url-block .url-title {
  margin-right: 20px;
  font-size: 20px;
}

.video-box .video-word .video-row .video-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-box .video-word .video-row .video-center .video-size {
  display: flex;
  justify-content: center;
  margin-top: 30px;
  max-height: 220px;
}

.video-btn {
  margin: 20px 0;
  text-align: center;
}

.video-btn .off-btn {
  margin-left: 70px;
}

#videoInt {
  width: calc(100% - 100px);
}
