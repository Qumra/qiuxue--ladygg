<div class="pas">
    <div class="admin-box fjs">
        <div class="fjs">
            <p class="input-titie">角色</p>
            <select ng-model="vm.params.roleId" ng-options="x.id as x.roleName for x in vm.roleSclect">
                <option value="">请选择</option>
            </select>
        </div>
        <div class="fjs">
            <p class="input-titie">用户名</p>
            <input type="text" class="input-box" ng-model="vm.params.accountName">
        </div>
        <div>
            <button class="btn btn-success btn-right" ng-click="vm.reset()">重置</button>
            <button class="btn btn-primary" ng-click="vm.search()">查询</button>
        </div>
    </div>
    <div class="admin-content">
        <div class="content-title fjs">
            <p>用户列表 </p>
            <button class="btn btn-info" ng-click="vm.add()">+新增</button>
        </div>
        <div class="admin-table">
            <table class="table bordered">
                <tr>
                    <th class="text-center son-border">id</th>
                    <th class="text-center son-border">用户名</th>
                    <th class="text-center son-border">角色</th>
                    <th class="text-center son-border">创建人</th>
                    <th class="text-center son-border">创建时间</th>
                    <th class="text-center son-border">更新人</th>
                    <th class="text-center son-border">更新时间</th>
                    <th class="text-center son-border">操作</th>
                </tr>
                <tr ng-repeat="list in vm.account">
                    <td class="text-center son-border">{{$index +1}}</td>
                    <td class="text-center son-border">{{list.accountName}}</td>
                    <td class="text-center son-border">{{list.roleName}}</td>
                    <td class="text-center son-border">{{list.createBy}}</td>
                    <td class="text-center son-border">{{list.createAt|date : 'yyyy/MM/dd hh:mm:ss'}}</td>
                    <td class="text-center son-border">{{list.updateBy}}</td>
                    <td class="text-center son-border">{{list.updateAt|date : 'yyyy/MM/dd hh:mm'}}</td>
                    <td class="text-center son-border">
                        <button class="btn btn-warning btn-right" ng-click="vm.edit(list.id)">编辑</button>
                        <button class="btn btn-danger" ng-click="vm.del(list.id)">删除</button>
                    </td>
                </tr>
            </table>
        </div>
        <div class="page-box" novalidate>
            <uib-pagination total-items="vm.total" ng-change="vm.pagechang()" ng-model="vm.params.page" max-size="vm.maxSize"
                previous-text="上一页" next-text="下一页" boundary-link-numbers="true"></uib-pagination>
            <div class="page-go">
                去第
                <input class="page-input" type="number" ng-model="vm.params.inputPage" oninput="value=value.replace(/[^\d]/g,'')">
                页
            </div>
            <button class="btn btn-primary" ng-click="vm.submit()" ng-disabled="vm.params.inputPage > vm.Tpage">确定</button>
        </div>
    </div>