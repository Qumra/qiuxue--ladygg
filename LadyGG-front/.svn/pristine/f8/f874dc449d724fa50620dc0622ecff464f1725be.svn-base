<div class="pas">
    <div class="user-box">
        <div class="box-top fjs">
            <div class="fjs">
                <b class="input-title">昵&emsp;称</b>
                <input class="input-box" type="text" ng-model="vm.params.nickName">
            </div>
            <div class="fjs">
                <b class="input-title">ID&emsp;</b>
                <input class="input-box" type="text" ng-model="vm.params.id">
            </div>
            <div class="fjs">
                <b class="input-title">年级</b>
                <select ng-model="vm.params.grade" ng-options="value as name for (value,name) in vm.gradeSelect">
                    <option value="">请选择</option>
                </select>
            </div>
        </div>
        <div class="box-cen fjs">
            <div class="fjs">
                <b class="input-title">手机号</b>
                <input class="input-box" type="text" ng-model="vm.params.phone">
            </div>
            <div class="fjs">
                <b class="input-title">邮件</b>
                <input class="input-box" type="text" ng-model="vm.params.email">
            </div>
            <div class="fjs">
                <b class="input-title">状态</b>
                <select ng-model="vm.params.userStatus" ng-options="value as name for (value,name) in vm.userStatusSelect">
                    <option value="">请选择</option>
                </select>
            </div>
        </div>
        <div class="box-bottom fjs">
            <div class="fjs">
                <b class="input-title">逆袭豆</b>
                <input class="input-box" type="text" ng-model="vm.params.scoreBegin" ng-class="{'input-border':vm.params.scoreBegin>vm.params.scoreEnd}">
                <div class="blank" ng-class="{'red':vm.params.scoreBegin>vm.params.scoreEnd}">~</div>
                <input class="input-box" type="text" ng-model="vm.params.scoreEnd" ng-class="{'input-border':vm.params.scoreBegin>vm.params.scoreEnd}">
            </div>
            <div class="fjs">
                <b class="input-title">所在区域</b>
                <input class="input-box" type="text" ng-model="vm.params.adress">
            </div>
            <div class="fjs">
                <button class="btn btn-info user-btn" ng-click="vm.reset()">重置</button>
                <button class="btn btn-danger user-btn" ng-click="vm.search()">搜索</button>
            </div>
        </div>
    </div>
    <div class="user-content">
        <div class="content-title fjs">
            <p>用户管理（用户总人数：{{vm.total}})</p>
        </div>
        <div class="user-table">
            <table class="table bordered">
                <tr>
                    <th class="text-center son-border">序号</th>
                    <th class="text-center son-border">ID</th>
                    <th class="text-center son-border">昵称</th>
                    <th class="text-center son-border">邮箱</th>
                    <th class="text-center son-border">手机号</th>
                    <th class="text-center son-border">逆袭豆</th>
                    <th class="text-center son-border">年级</th>
                    <th class="text-center son-border">所在区域</th>
                    <th class="text-center son-border">状态</th>
                    <th class="text-center son-border">操作</th>
                </tr>
                <tr class="text-center" ng-repeat="list in vm.user">
                    <td class="son-border">{{$index+1}}</td>
                    <td class="son-border">{{list.id}}</td>
                    <td class="son-border">{{list.nickName}}</td>
                    <td class="son-border">{{list.email}}</td>
                    <td class="son-border">{{list.phone}}</td>
                    <td class="son-border">{{list.score}}</td>
                    <td class="son-border">{{list.grade | grade}}</td>
                    <td class="son-border">{{list.adress}}</td>
                    <td class="son-border">{{list.userStatus | freezestatus}}</td>
                    <td class="son-border">
                        <button class="btn btn-warning" ng-click="vm.examine(list.id)">查看</button>
                        <button class="btn btn-danger" ng-click="vm.freeze(list.id)">冻结</button>
                    </td>
                </tr>
            </table>
        </div>
        <div class="page-box" novalidate>
            <uib-pagination total-items="vm.total" ng-change="vm.pagechang()" ng-model="vm.params.page" max-size="vm.maxSize"
                previous-text="上一页" next-text="下一页" boundary-link-numbers="true"></uib-pagination>
            <div class="page-go">
                去第
                <input class="page-input" type="number" ng-model="vm.params.inputPage" oninput="value=value.replace(/[^\d]/g,'')">
                页
            </div>
            <button class="btn btn-primary" ng-click="vm.submit()" ng-disabled="vm.params.inputPage > vm.Tpage">确定</button>
        </div>
    </div>
</div>
</div>