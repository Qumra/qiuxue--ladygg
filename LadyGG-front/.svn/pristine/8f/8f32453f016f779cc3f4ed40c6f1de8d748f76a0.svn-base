.user-content {
    margin-top: 20px;
    border: solid 1px #cccccc;

    .user-title {
        padding: 0 30px;
        height: 40px;
        font-size: 18px;
        background-color: #616663;
        color: #fff;
    }
}

.user-word {
    padding: 50px 80px;

    .user-input {
        display: flex;
        justify-content: space-between;

        .input-father {
            padding: 10px 20px;

            .input-title {
                margin-right: 10px;
                font-size: 14px;
            }
        }
    }
}

.user-img {
    padding-right: 200px;

    .add-img {
        position: relative;
        left: 20px;
        display: inline-block;
        padding: 10px;
        max-width: 200px;
        max-height: 300px;
        line-height: 30px;
        vertical-align: middle;
        border: 5px solid #cccccc;
    }

    #images {
        max-width: 100px;
    }
}