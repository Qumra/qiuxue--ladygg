.acticle-box {
    padding-bottom: 100px;
    border: solid 1px #e9e9e9;
    border-radius: 8px;

    .acticle-title {
        padding: 0 30px;
        height: 40px;
        background-color: #616663;
        color: #fff;
    }

    .acticle-word {
        display: flex;
        flex-direction: column;
        padding: 50px 100px;

        .acticle-input {
            margin: 10px 0;
            .input-titie {
                margin-right: 10px;
            }
            .input-box {
                width: calc(100% - 100px);
                height: 30px;
            }
        }
        .video-cover {
            margin: 10px 0;
            padding-left: 87px;

            .video-img {
                margin: 10px 0 25px 0;
                width: 300px;
            }

            #vimages {
                max-height: 200px;
            }

            .bordered {
                border: 1px solid #ddd;

                .son-vertical {
                    vertical-align: middle;
                }
            }
        }
        .add-file {
            margin-left: 0;
        }

        .add-btn {
            margin-left: -82px;
        }

        .acticle-btn {
            margin-top: 20px;
            margin-left: 600px;
        }
       
    }
}