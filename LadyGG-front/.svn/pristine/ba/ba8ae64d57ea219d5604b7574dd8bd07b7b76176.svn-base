.ACD-box {
  padding-bottom: 100px;
  border: solid 1px #e9e9e9;
  border-radius: 8px;
}

.ACD-box .ACD-title {
  padding: 0 30px;
  height: 40px;
  background-color: #616663;
  color: #fff;
}

.ACD-box .ACD-word {
  padding: 50px 40px;
}

.ACD-box .ACD-word .ACD-input {
  margin: 10px 0;
  padding: 10px 30px;
}

.ACD-box .ACD-word .ACD-input .input-titie {
  margin-right: 40px;
  width: 56PX;
  font-size: 14px;
  font-weight: 700;
}

.ACD-box .ACD-word .ACD-input .input-box {
  width: calc(100% - 150px);
  height: 30px;
}

.ACD-box .ACD-word .ACD-input select {
  width: calc(100% - 150px);
  height: 30px;
  text-align: center;
  text-align-last: center;
}

.ACD-box .ACD-word .ACD-btn {
  margin: 50px 0;
  padding: 10px 30px 10px 140px;
}

.ACD-box .ACD-word .ACD-btn button {
  width: 120px;
  height: 40px;
}

.ACD-box .hint {
  margin-top: 4px;
  margin-right: 10px;
  font-size: 16px;
  color: #ff0000;
}

.ACD-box .hints {
  padding-left: 30px;
  font-size: 16px;
  color: #ff0000;
  text-align: center;
}
