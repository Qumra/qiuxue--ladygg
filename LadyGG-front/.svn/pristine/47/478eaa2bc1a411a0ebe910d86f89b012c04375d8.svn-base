.RLD-box {
    padding-bottom: 100px;
    border: solid 1px #e9e9e9;
    border-radius: 8px;

    .RLD-title {
        padding: 0 30px;
        height: 40px;
        background-color: #616663;
        color: #fff;
    }

    .RLD-word {
        padding: 10px 20px;

        .RLD-input {
            margin: 10px 0;
            padding: 10px 30px;

            .input-titie {
                margin-right: 2%;
                font-size: 14px;
            }

            .input-box {
                padding-left: 20px;
                width: 40%;
                height: 30px;
                text-align: left;
            }
        }

        .RLD-che {
            padding: 20px 200px 20px 105px;

            .che-father {
                display: flex;
                justify-content: space-between;

                .che-son {
                    display: flex;
                    flex-direction: column;

                    .father {
                        margin-bottom: 10px;
                        font-size: 20px;
                    }

                    .son {
                        margin-left: 20px;
                    }
                }
            }
        }

        .RLD-btns {
            padding-left: 50px;

            .RLD-btn {
                margin: 50px 0 0 60px;
                width: 120px;
                height: 36px;
            }
        }
    }
}