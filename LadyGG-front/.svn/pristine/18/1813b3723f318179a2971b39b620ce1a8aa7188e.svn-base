.article-box {
  border: solid 1px #e9e9e9;
  background-color: #f9f9f9;
}

.article-box .box-top {
  margin-top: 20px;
  padding: 0 50px;
}

.article-box .box-cen {
  margin: 10px 0;
  padding: 0 50px;
}

.article-box .box-bottom {
  margin: 10px 0;
  padding: 0 50px;
  text-align: right;
}

.article-content {
  margin-top: 20px;
  border: solid 1px #cccccc;
}

.article-content .content-title {
  padding: 0 30px;
  height: 40px;
  border-bottom: solid 1px #cccccc;
  font-size: 16px;
}

.article-content .article-table {
  padding: 15px 30px;
  height: 600px;
}

.article-content .article-table .bordered {
  border: 1px solid #ddd;
}

.article-content .article-table .bordered .son-border {
  border: 1px solid #ddd;
}
